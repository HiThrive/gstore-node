{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "dom"],
    "strict": true,
    "removeComments": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": false,
    "rootDir": ".",
    "outDir": "lib",
    "types": [
      "node",
      "jest"
    ],
    "allowJs": false,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "typings",
    "src/.eslintrc.js"
  ]
}
